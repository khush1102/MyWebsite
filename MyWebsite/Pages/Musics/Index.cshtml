@page
@model MyWebsite.Pages.Musics.IndexModel
@{
    ViewData["Title"] = "Music";
}

<h1>Music</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Music[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Music[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Music[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Music[0].Singer)
            </th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Music)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Singer)
                </td>
            </tr>
        }
    </tbody>
</table>

